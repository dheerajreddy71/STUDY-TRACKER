# ========================================
# DATABASE CONFIGURATION
# ========================================

# Supabase Configuration (PostgreSQL)
NEXT_PUBLIC_SUPABASE_URL=https://oxctqjbfihdvqyuvbtno.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Direct PostgreSQL Connection (Supabase)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Node Environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# AUTHENTICATION
# ========================================

# JWT Secret for session encryption
JWT_SECRET=your_jwt_secret_here_min_32_characters

# Session configuration
SESSION_SECRET=your_session_secret_here_min_32_characters

# ========================================
# API CONFIGURATION
# ========================================

# API Rate Limiting
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW_MS=900000

# ========================================
# OPTIONAL: EXTERNAL SERVICES
# ========================================

# Email Service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Redis (for caching and session store)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# AI/ML Services (for predictive analytics)
# OPENAI_API_KEY=your_openai_api_key

# Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (Error tracking)
# SENTRY_DSN=your_sentry_dsn
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ========================================
# STORAGE
# ========================================

# File uploads (Supabase Storage)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=study-resources

# ========================================
# SECURITY
# ========================================

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# FEATURE FLAGS
# ========================================

# Enable experimental features
NEXT_PUBLIC_ENABLE_AI_FEATURES=false
NEXT_PUBLIC_ENABLE_COLLABORATION=false
NEXT_PUBLIC_ENABLE_GAMIFICATION=true
